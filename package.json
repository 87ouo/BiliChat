{
  "name": "bilichat",
  "version": "1.3.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/3Shain/Bilichat.git"
  },
  "license": "GPL-2.0-or-later",
  "private": false,
  "author": "3Shain",
  "descrption": "Youtube-like bilibili livechat component",
  "bin": {
    "bilichat": "./dist/server.js"
  },
  "main": "dist/server.js",
  "files": [
    "dist",
    "doc",
    "config.json"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "compile:server": "webpack --config webpack.server.config.js --progress --colors",
    "serve:ssr": "node dist/server",
    "build:ssr": "npm run build:client-and-server-bundles && npm run compile:server",
    "build:client-and-server-bundles": "ng build --prod && ng run bilichat:server:production",
    "build:ssr:official": "npm run build:client-and-server-bundles:offcial && npm run compile:server",
    "build:client-and-server-bundles:offcial": "ng build --prod --configuration=official && ng run bilichat:server:official --bundleDependencies all",
    "serve": "node serve-script"
  },
  "devDependencies": {
